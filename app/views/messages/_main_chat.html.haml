.chat-main
  .main-header
    .left-box
      %p.current-group
        = @group.name
      %ul.member-lists
        Memberï¼š
        - @group.users.each do |user|
          %li.member-lists__list
            = user.name
    = link_to 'Edit', edit_group_path(@group), class: "edit-btn"
  .main-messages
    .message
      = render @messages
  .main-form
    = form_for [@group, @message] do |f|
      .new-message
        = f.text_field :content, class: 'new-message__text', placeholder: "type a message"
        .input-box
          = f.label :image, class: 'input-box__image' do
            = icon('fa', 'image')
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'